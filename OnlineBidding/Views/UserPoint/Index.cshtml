            @Html.DisplayFor(modelItem => item.TotalPoint)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfBid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddedPoint)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeductedPoint)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
