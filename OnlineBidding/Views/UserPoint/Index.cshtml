        <th>
            @Html.DisplayNameFor(model => model.TotalPoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfBid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedPoint)
